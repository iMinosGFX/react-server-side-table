{
    "compilerOptions": {
      "jsx": "react",
      "module": "esnext",
      "esModuleInterop": true,
      "noImplicitAny": false,
      "outDir": "dist",
      "preserveConstEnums": true,
      "importHelpers": false,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
      "allowJs": false,
      "declaration": true,
      "moduleResolution": "node",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "example", "rollup.config.js"],
  }